<section id="todos">
  <header>
    <h2>Editing "<%= @list[:name]%>"</h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_index%>/delete" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
      </li>
    </ul>
  </header>
    <ul>
      <% @list[:todos].each_with_index do |todo, todo_index|%>
        <li>
          <h3><%= todo[:name]%></h3>
        </li>
      <% end %>
    </ul>
</section>

<form action="/lists/<%= @list_index%>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for your list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name]%>">
    <dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @list_index%>">Cancel</a>
  </fieldset>
</form>